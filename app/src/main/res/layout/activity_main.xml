<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@android:color/background_light">

    <!-- TODO: Person 2 ใช้ EditText นี้สำหรับกรอกน้ำหนัก -->
    <!-- TODO: Person5 - กำหนด textSize เป็น sp ที่นี่ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- TODO: Person5 - กำหนด textSize เป็น sp ที่นี่ -->
    <EditText
        android:id="@+id/edtWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:inputType="numberDecimal"
        android:hint="@string/weightHint"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- TODO: Person 2 ใช้ EditText นี้สำหรับกรอกส่วนสูง -->
    <!-- TODO: Person5 - กำหนด textSize เป็น sp ที่นี่ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- TODO: Person5 - กำหนด textSize เป็น sp ที่นี่ -->
    <EditText
        android:id="@+id/edtHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:inputType="numberDecimal"
        android:hint="@string/heightHint"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="24dp" />

    <!-- TODO: Person 2 เขียน Event กดปุ่มเพื่อคำนวณ BMI -->
    <!-- TODO: Person5 - กำหนด textSize เป็น sp ที่นี่ -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white" />

    <!-- TODO: Person 2 แสดงผล BMI ที่คำนวณได้ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_marginBottom="16dp">

        <!-- TODO: Person5 - กำหนด textSize เป็น sp ที่นี่ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bmi"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- TODO: Person5 - กำหนด textSize เป็น sp ที่นี่ -->
        <TextView
            android:id="@+id/txtBMIResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaultBMI"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <!-- TODO: Person 3 แสดงผลการจัดประเภท -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- TODO: Person5 - กำหนด textSize เป็น sp ที่นี่ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consider"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- TODO: Person5 - กำหนด textSize เป็น sp ที่นี่ -->
        <TextView
            android:id="@+id/txtBMICategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaultCategory"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </LinearLayout>

</LinearLayout>
